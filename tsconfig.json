{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true
  },
  "include": [
    "index.ts",
    "types.ts",
    "jwt/**/*.ts",
    "utils/**/*.ts"
  ]
}